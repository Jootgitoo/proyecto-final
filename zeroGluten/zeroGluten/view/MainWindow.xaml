<Window x:Class="zeroGluten.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:zeroGluten"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Viewbox>
        <Grid Width="799" Height="430" Background="#D9C5B4">
            
            <Image Source="/images/logo-app.png" HorizontalAlignment="Left" Height="436" VerticalAlignment="Center" Width="436" IsEnabled="False"/>

            <TextBox Name="txtBlockNombreUsuario" HorizontalAlignment="Left" Margin="466,119,0,0" TextWrapping="Wrap" Text="Escriba el nombre del usuario" VerticalAlignment="Top" Width="309" BorderBrush="Transparent" Background="Transparent" FontFamily="pack://application:,,,/font/#Maxwell"/>
            <Rectangle Fill="Black" Height="1" Width="309" VerticalAlignment="Top" Margin="466,135,0,0" HorizontalAlignment="Left"/>

            <TextBox Name="txtBlockPassword" HorizontalAlignment="Left" Margin="466,219,0,0" TextWrapping="Wrap" Text="Escriba su contraseña" VerticalAlignment="Top" Width="309" BorderBrush="Transparent" Background="Transparent" FontFamily="pack://application:,,,/font/#Maxwell"/>
            <Rectangle Fill="Black" Height="1" Width="309" VerticalAlignment="Top" Margin="466,235,0,0" HorizontalAlignment="Left"/>

            <Button Name="btnIniciarSesion" Content="Iniciar Sesion" HorizontalAlignment="Left" Margin="466,299,0,0" VerticalAlignment="Top" Height="29" Width="110" Background="#400101" Foreground="#DEDEDE" FontFamily="pack://application:,,,/font/#Maxwell" FontWeight="Bold"/>
            <Button Name="btnRegistrarse" Content="Resgistrarse" HorizontalAlignment="Left" Margin="665,299,0,0" VerticalAlignment="Top" Height="29" Width="110" Background="#400101" Foreground="#DEDEDE" FontFamily="pack://application:,,,/font/#Maxwell" FontWeight="Bold"/>
        </Grid>
    </Viewbox>
</Window>
